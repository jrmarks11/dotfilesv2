[core]
  excludesfile = ~/.gitignore_global
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  features = decorations
  syntax-theme = gruvbox-light
[merge]
  conflictStyle = diff3
[diff]
  colorMoved = default
[push]
  default = current
[pull]
  rebase = true
[alias]
  hs = log --pretty='format:%C(yellow)%h %Creset- %C(black)%s %C(bold blue)[%an]%Creset %Cgreen%cr' --graph
  up = !git pull --rebase $@ && git submodule update --init --recursive && git submodule update --remote --merge
  yolo = push --force-with-lease
  browse = !gh browse
[color]
  ui = auto
