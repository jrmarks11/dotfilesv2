#!/usr/bin/env bash

is_in_git_repo() {
    git rev-parse HEAD > /dev/null 2>&1
}

is_in_git_repo || { echo "Error: Not in a git repository" >&2; exit 1; }

for branch in $(git for-each-ref --format='%(refname)' refs/heads/); do
  name="${branch##*/}"

  # dont delete master pls thx
  if [[ $name == *"master"* ]]; then
    continue
  fi

  if [[ $name == *"production"* ]]; then
    continue
  fi

  echo "Checking $name"

  merged="$(git log --grep="$name" | grep 'Merge pull request')"
  if [[ -n $merged ]]; then
    git branch -D "$name"
  fi
done
